<%- include('../partials/header') %>

    <section class="container workout-list">
        <h1>Edit your workout</h1>
        <p class="title-workout-list"><%=exerciseToEdit.name%></p>
        <form method="POST" action="/exercises/<%=exerciseToEdit._id%>?_method=PUT"> 
            <div class="row">
                <label for="reps">Reps: <input value="<%=exerciseToEdit.reps%>" type="number" name="reps" min="0" max="9999">
                </label>
            </div>
            <div class="row">
                <label for="sets">Sets: <input value="<%=exerciseToEdit.sets%>" type="number" name="sets" min="0" max="9999">
                </label>
            </div>
            <div class="row">
                <label for="weight">Weight: <input value="<%=exerciseToEdit.weight%>" type="number" name="weight" min="0" max="9999">
                </label>
            </div>
            <div class="row">
                <label for="rest">Description: <textarea name="description" rows="10" cols="35"><%= exerciseToEdit.description %></textarea>
                </label>
            </div>
            <div class="row">
                <button type="submit">Edit workout</button>
            </div>
    </section>

<%- include('../partials/footer') %>