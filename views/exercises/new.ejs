<%- include('../partials/header') %>

<h1>New Exercise</h1>
	<form method="POST" action="/exercises">
		<label>Name</label>
		<input type="text" name="name" required>
		<br>
		
		<label>Sets
		<input type="number" name="sets"></label>
		<br>
		<label>Reps
		<input type="number" name="reps"></label>
		<br>
		<label>Weight
		<input type="number" name="weight"></label>
		<br>
		<label>Equipment
		<input type="text" name="equipment"></label>
		<br>
    <label>Description
		<textarea name="description"></textarea></label>
		<br>
		<input type="submit" value="Save">
	</form>

